<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vista_lista_rutinas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corcho"
    android:orientation="vertical">


    <TextView
        android:id="@+id/num_Rutinas_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:paddingLeft="3sp"
        android:paddingBottom="5sp"
        android:paddingTop="2sp"
        android:background="@android:color/black"
        android:text="@string/num_rutinas"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_rutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/num_Rutinas_lista"
        android:divider="@android:color/transparent"
        android:dividerHeight="2sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_rutinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/plus_ic"
        app:elevation="4dp" />
</RelativeLayout>