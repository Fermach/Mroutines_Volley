<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/papel2"
    android:id="@+id/area_formulario_ejercicio"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@android:color/black"
            android:layout_width="478dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nuevo_ejercicio"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5sp"
        >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterMaxLength="30"
        app:counterEnabled="true"
        android:textColorHint="@android:color/black"
        app:errorEnabled="true"
        android:layout_marginLeft="13sp"
        android:layout_marginRight="17sp"
        android:layout_weight="9.38">
        <EditText
            android:id="@+id/editText_nombreEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:hint="@string/intr_nombre"
            android:inputType="text"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:layout_marginLeft="13sp"
            android:textColorHint="@android:color/black"
            android:layout_marginRight="17sp"
            android:layout_weight="9.38">
            <EditText
                android:id="@+id/editText_seriesEjercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:hint="@string/intr_series"
                android:inputType="number"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@android:color/black"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="17sp"
            android:layout_weight="9.38">
            <EditText
                android:id="@+id/editText_repesEjercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/intr_repes"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:text="0"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:textColorHint="@android:color/black"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/editText_tiempoEjercicio"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:hint="@string/intr_tiempo"
                android:text="0"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_unidadesTiempo"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="11sp"
            android:layout_marginLeft="7sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="10sp"
            android:layout_marginTop="16sp"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17sp"
            android:layout_marginTop="10sp"
            android:textColor="@android:color/black"
            android:text="@string/intr_gMuscular"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_tipoEjercicio"
            android:layout_width="348dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="11sp"
            android:layout_marginLeft="17sp"
            android:layout_marginRight="17dp"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="38sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancelar_formEjer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancelar" />

        <Button
            android:id="@+id/btn_crear_formEjer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/crear_ejercicio" />


    </LinearLayout>

</LinearLayout>
